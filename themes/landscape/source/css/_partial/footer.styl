#footer
  background: color-footer-background
  padding: 50px 0
  border-top: 1px solid color-border
  color: color-grey
  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline

#footer-info
  line-height: line-height
  float: left
  width: 30%
  font-size: 0.85em

#footer-count
  line-height: line-height
  float: right
  width: 30%
  font-size: 0.85em
  display: table

#footer-count div
  display: table-cell
  vertical-align: middle

